# ==========================================
# Configuración del Servidor
# ==========================================

# Puerto del servidor (default: 8080)
PORT=8080

# Host del servidor (default: 0.0.0.0)
HOST=0.0.0.0

# Entorno (development | production)
NODE_ENV=production

# ==========================================
# Base de Datos (REQUERIDO EN PRODUCCIÓN)
# ==========================================

# PostgreSQL (producción) - OBLIGATORIO en DigitalOcean
# Formato: postgresql://usuario:contraseña@host:puerto/base_datos?sslmode=require
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/tiktools?sslmode=require

# SQLite (desarrollo - si DATABASE_URL no está configurado)
# Se crea automáticamente en ./data/auction.db

# ==========================================
# Autenticación JWT (REQUERIDO)
# ==========================================

# Secret para tokens JWT (IMPORTANTE: OBLIGATORIO en producción)
# Generar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=cambiar-este-secret-por-uno-generado-aleatoriamente-32-chars-minimo

# Tiempo de expiración del access token (default: 15m)
JWT_ACCESS_EXPIRES=15m

# Tiempo de expiración del refresh token (default: 7d)
JWT_REFRESH_EXPIRES=7d

# ==========================================
# PayPal (REQUERIDO para pagos)
# ==========================================

# Credenciales de PayPal Developer Dashboard
# https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# Modo (sandbox | live)
PAYPAL_MODE=live

# ==========================================
# TikTok Live Connector (Opcional)
# ==========================================

# Session ID de TikTok (opcional pero recomendado)
# Obtener desde las cookies de TikTok después de iniciar sesión
TIKTOK_SESSION_ID=

# Target IDC (opcional, usar si se especifica session ID)
TIKTOK_TT_TARGET_IDC=

# API Key para el servidor de firmas (si se usa uno custom)
TIKTOK_SIGN_API_KEY=

# URL base del servidor de firmas (si se usa uno custom)
TIKTOK_SIGN_BASE_PATH=

# Headers extra para requests (JSON string, opcional)
# TIKTOK_EXTRA_HEADERS={"X-Custom-Header": "value"}

# ==========================================
# CORS
# ==========================================

# Origen permitido para CORS (default: * permite todos)
# En producción, especificar el dominio exacto
CORS_ORIGIN=*

# ==========================================
# Digital Ocean App Platform
# ==========================================

# Estas variables se configuran automáticamente en DO:
# - PORT (asignado por DO)
# - DATABASE_URL (si se usa DB administrada de DO)

# Variables que DEBES configurar en DO:
# - JWT_SECRET (usar un valor único y seguro)
# - NODE_ENV=production
# - TIKTOK_SESSION_ID (si lo usas)
